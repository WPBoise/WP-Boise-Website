{
    "name": "wpboise/wp-boise-wordpress",
    "description": "The Website Build for WPBoise.com",
    "type": "project",
    "license": "GPLv2 or later",
    "authors": [
      {
        "name": "Russell Fair",
        "email": "rfair404@gmail.com"
      }
    ],
    "config": {
        "bin-dir": "bin",
        "platform": {
            "php": "7.2"
        },
        "sort-packages": true,
        "preferred-install": "dist",
        "optimize-autoloader": true,
        "vendor-dir": "vendor"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "require": {
      "johnpbloch/wordpress-core-installer": "^1.0.0.2",
      "johnpbloch/wordpress": "4.9.8"
    },
    "require-dev": {
        "phpunit/phpunit": "6.0.0",
        "squizlabs/php_codesniffer": "^3.0.2",
        "wp-coding-standards/wpcs": "^1.2",
        "phpmd/phpmd": "^2.6"
    },
    "extra": {
      "wordpress-install-dir": "web",
      "installer-paths": {
        "web/custom-content/plugins/{$name}/": ["type:wordpress-plugin"],
        "web/custom-content/themes/{$name}/": ["type:wordpress-theme"]
      }
    }
}
